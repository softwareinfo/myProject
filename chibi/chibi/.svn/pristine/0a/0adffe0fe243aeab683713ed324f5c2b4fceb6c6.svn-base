	<script type="text/javascript">
		var audio = document.getElementById('audio');

		//播放暂停
		function playPause()
		{ 
			if (audio.paused){
				audio.play(); 
			  	$(".audioState").addClass('audioPlay').removeClass('audioPause');
			} else {
				audio.pause(); 
				$(".audioState").addClass('audioPause').removeClass('audioPlay');
			}  
		} 

		//将秒数转为00:00格式
	  	function timeToStr(time) {
			 var m = 0,
			  s = 0,
			  _m = '00',
			  _s = '00';
			 time = Math.floor(time % 3600);
			 m = Math.floor(time / 60);
			 s = Math.floor(time % 60);
			 _s = s < 10 ? '0' + s : s + '';
			 _m = m < 10 ? '0' + m : m + '';
			 return _m + ":" + _s;
	 	}

	 	function updateTime(){
	 		var t=parseInt(audio.currentTime);
			var timeDefault = parseInt(audio.duration);	
			$('.voiceTime').text(timeToStr(t));
	 	}

		$(function(){
			$('#audio_btn').click(function(){
				playPause();

				updateTime();
				//触发播放事件
				setInterval(function(){
					updateTime();
				},1000);
			});

		});
	</script>
